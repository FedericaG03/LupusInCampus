<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.LupusInCampus"
        tools:targetApi="31"
        tools:ignore="DiscouragedApi"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:configChanges="locale"
        > <!--ignora il warning quando metto activity in landscape , (locale ==italiano)-->

        <activity android:name=".Login.LoginActivity"
            android:exported="true"
            android:configChanges="locale"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Play.GiocoActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>
        
        <activity android:name=".Amici.ListaAmiciActivity"
            android:exported ="true"
            android:screenOrientation="landscape"/>

        <activity android:name=".Login.ForgotPasswordActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>

        <activity android:name=".Login.RegisterActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>

        <activity android:name=".Play.PlayActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>

        <activity android:name=".Play.WordActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>

        <activity android:name=".Play.LocalActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>

    </application>

</manifest>