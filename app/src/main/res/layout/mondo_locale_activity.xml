<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo">

    <!-- Icona Profilo -->
    <include
        layout="@layout/profile_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageButton
            android:id="@+id/btn_local"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:contentDescription="@string/local_button_description"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/local_card"/>

        <ImageButton
            android:id="@+id/btn_world"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/word_card"/>
    </LinearLayout>

    <include
        layout="@layout/back_btn_layout"/>

</RelativeLayout>
