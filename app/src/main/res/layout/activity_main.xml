<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MainPageTextViewStyle"
    android:background="@drawable/sfondo"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_btn_txt"
        android:textColor="@color/text_red"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/rules_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rules_btn_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_btn"/>

    <TextView
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_btn_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exit_btn"/>

    <TextView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_btn_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rules_btn"/>

    <include
        android:id="@+id/include_profile_btn_main"
        layout="@layout/profile_icon_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_sidebar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.25"
        android:background="@color/opaque_white"
        android:theme="@style/MainPageSidebarTextViewStyle"
        android:text="@string/username"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/profile_img_sdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icona_profilo_inverted"
            android:background="@null"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/username_sdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/profile_img_sdb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/area_utente_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area_utente_btn_txt"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@id/username_sdb"/>

        <TextView
            android:id="@+id/lista_amici_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lista_amici_btn_txt"
            android:paddingStart="30dp"
            android:paddingEnd="8dp"
            app:drawableEndCompat="@drawable/notification_number_indicator"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/area_utente_btn" />

        <TextView
            android:id="@+id/lista_inviti_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lista_inviti_btn_txt"
            android:paddingStart="30dp"
            android:paddingEnd="8dp"
            app:drawableEndCompat="@drawable/notification_number_indicator"
            app:layout_constraintTop_toBottomOf="@id/lista_amici_btn"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>